@page
@using System.ComponentModel.DataAnnotations
@model web.professionaltranslator.net.Pages.IndexModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Professional Translator, Cinta Garcia</title>
    <meta name="title" content="Professional Translator, Cinta Garcia">
    <meta name="description" content="Translating fiction requires intimate knowledge of both languages, creativity, and the ability to replicate style and tone.">
    <meta name="keywords" content="Fiction Translations, Translate English to Spanish, Translate Spanish to English, Translate Novels, Translate Short Stories">
    <meta name="robots" content="index, follow">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="language" content="English">
    <meta name="revisit-after" content="90 days">
    <meta name="author" content="Cinta Garcia de la Rosa Translation Services">
    <meta property="og:url"                content="https://professionaltranslator.net" />
    <meta property="og:type"               content="article" />
    <meta property="og:title"              content="Hello! ¡Hola!" />
    <meta property="og:description"        content="I specialize in translating English/Spanish Fiction." />
    <meta property="og:image"              content="https://professionaltranslator.net/img/og/intro-16-9.png" />
    <meta property="og:image:alt"          content="Professional Translator - English & Spanish" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/manifest.json">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#603cba">
    <meta name="theme-color" content="#ffffff">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/global.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/intro.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/animate.css" asp-append-version="true"  />
</head>
<body>
    @await Component.InvokeAsync("Loading")
<div class="container-fluid" style="height:  100vh;">
    <main class="d-flex flex-column h-100">
        <div class="row h-100 flex-grow-1">
            <div class="col-12 text-center">
                <img src="img/splash-logo.png" alt="Cinta Garcia - Professional Translator" title="Cinta Garcia - Professional Translator" class="intro-logo fadeInDownBig animated" style="visibility: visible; animation-name: fadeInDownBig; max-height: 200px;" />
            </div>
        </div>
        <div class="row h-100 flex-grow-1 justify-content-center">
            <div class="col-3">
                <img src="img/hola.png" title="¡Hola!" alt="¡Hola!" class="img-fluid fadeInLeftBig animated" style="visibility: visible; animation-name: fadeInLeftBig; max-height: 300px;">
            </div>
            <div class="col-3 offset-3">
                <img src="img/hello.png" title="Hello!" alt="Hello!" class="img-fluid fadeInRightBig animated" style="visibility: visible; animation-name: fadeInRightBig; max-height: 300px;">
            </div>
        </div>
        <div class="row h-100 flex-grow-1">
            <div class="col-10 offset-1">
                <h1 class="h1-responsive fadeInUpBig animated medium-screen p-5" title="Fiction translation is an art that requires more than swapping one word for another." style="visibility: visible; animation-name: fadeInUpBig;">
                    Translating fiction is more than swapping native words for foreign ones. It's an art that requires intimate knowledge of both languages, creativity, and the ability to replicate style and tone.
                </h1>
                <h1 class="h1-responsive fadeInUpBig animated small-screen text-center" title="Fiction translation is an art that requires more than swapping one word for another." style="visibility: visible; animation-name: fadeInUpBig;">
                    Translating fiction is more than swapping native words for foreign ones.
                </h1>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <p class="mt-3">
                    <a class="btn btn-purple fadeInUpBig animated" style="visibility: visible; animation-name: fadeInUpBig;" role="button" title="Discover what a professional translation can offer you." asp-page="/Home"><span>Go Pro!</span></a>
                </p>
            </div>
        </div>
    </main>
</div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/intro.js" asp-append-version="true"></script>
    <script src="~/js/wow.js" asp-append-version="true"></script>
    <script src="~/js/global.js" asp-append-version="true"></script>

</body>
</html>

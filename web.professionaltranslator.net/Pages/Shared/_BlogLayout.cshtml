@{
    ViewData["Title"] += " Blog";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="prelaod" as="style" href="~/css/blog/global.css" asp-append-version="true" />
    <noscript>
        <link rel="stylesheet" href="~/css/blog/global.css" asp-append-version="true" />
    </noscript>
}

@RenderSection(BlogConstants.Preload, required: false)

@await RenderSectionAsync("Styles", false)

@RenderBody()

@await RenderSectionAsync("BlogScripts", required: false)

@section Scripts
{
    @*<script src="~/js/services-area.min.js" asp-append-version="true"></script>*@
    <script src="~/js/blog/global.js" asp-append-version="true" async defer></script>
}



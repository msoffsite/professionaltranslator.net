@page 
@model UnsubscribeModel
@{
    ViewData["Title"] = Model.Item.Title;
    string body = Model.Item.Body;
}
@section MetaTags
{
    <meta name="title" content="Professional Translator, Cinta Garcia -- Unsubscribe">
    <meta name="description" content="Unsubscribe from my newsletter.">
    <meta name="robots" content="noindex">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="language" content="English">
    <meta name="revisit-after" content="90 days">
    <meta name="author" content="Cinta Garcia de la Rosa Translation Services">
}
@section Styles
{
    <link rel="stylesheet" type="text/css" href="~/css/material-design-iconic-font.min.css" />
    <link rel="stylesheet" href="~/css/form.min.css" asp-append-version="true" />
}
<div class="row mt-5 mb-4">
    <div class="col-12 text-center page-header">
        <h2 class="h2-responsive page-header mb-5">
            @if (Model.Item.HeaderType == Enumeration.HeaderType.Quote)
            {
                <sup><i class="fas fa-quote-left"></i></sup>@Model.Item.Header<sup><i class="fas fa-quote-right"></i></sup>
            }
            else
            {
                @Model.Item.Header
            }
        </h2>
    </div>
</div>
<div class="row mt-5 mb-4">
    <div class="col-12 text-justify">
        @Html.Raw(body)
    </div>
</div>
<div class="form-wrapper">
    <form class="form-container validate-form" autocomplete="off" method="post">
        <div class="form-row">
            <div class="form-group col-12">
                <div class="input-container validate-input light-gray-background" data-validate="Please type a valid email address here." title="A valid email address is required here.">
                    <input id="unsubscribe_email_address" class="input-element" type="email" placeholder="Your Email Address">
                </div>
            </div>
        </div>
    </form>
    <div id="unsubscribe_result_row" class="form-row hide-soft">
        <div class="form-group col-12">
            <div id="unsubscribe_result_text" role="alert"></div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-12">
            <button id="unsubscribe_me" class="btn btn-purple" role="button" title="Unsubscribe."><span>Unsubscribe</span></button>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="~/js/form.min.js" asp-append-version="true"></script>
    <script src="~/js/unsubscribe.min.js" asp-append-version="true"></script>
}

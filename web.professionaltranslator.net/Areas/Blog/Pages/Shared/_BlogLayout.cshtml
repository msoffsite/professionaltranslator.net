<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Professional Translator Blog</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/fontawesome.all.min.css" />
    <link rel="stylesheet" href="~/css/global.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/animate.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/carousel.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/menu.min.css" asp-append-version="true" />
    <link rel="prelaod" as="style" href="~/css/blog/global.css" asp-append-version="true" />
    <noscript>
        <link rel="stylesheet" href="~/css/blog/global.css" asp-append-version="true" />
    </noscript>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @await RenderSectionAsync("Styles", false)
    @await RenderSectionAsync(Constants.Preload, required: false)
</head>
<body style="background-position: center;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">

                @*<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>*@

                <div class="d-sm-inline-flex flex-sm-row-reverse">
                    <div class="list-group list-group-flush get-started">
                        <a class="list-group-item menu-link" asp-page="/Contact" title="Get your translation started today.">
                            <h3 class="menu-title">
                                Why Wait?
                            </h3>
                            <div class="menu-icon">
                                <span class="line"></span>
                                <span class="fas fa-exclamation-circle" aria-hidden="true"></span>
                                <span class="line"></span>
                            </div>
                            <h6 class="menu-subtitle subtitle">
                                Start Your Translation Today!
                            </h6>
                        </a>
                    </div>
                </div>
                <a class="navbar-brand" asp-area="" asp-page="/Home"><img src="~/img/at-your-service.png" class="img-fluid" alt="Professional translator at your service!" title="Professional translator at your service!" /></a>
            </div>
        </nav>
    </header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>
    @await RenderSectionAsync("Comments", required: false)
    
    <footer class="border-top footer text-muted bg-white">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="Admin" asp-page="/Index">Admin</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        @*<li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-page="/EditPage">Page</a>
                            </li>*@
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-page="/Portfolio">Portfolio Editor</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-page="/Testimonial">Testimonial Editor</a>
                        </li>
                        @*<li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                            </li>*@
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container text-center mt-1">
            &copy; @Html.Raw(DateTime.Now.Year) - professionaltranslator.net - administrative area
            @*<a asp-area="" asp-page="/Privacy">Privacy</a>*@
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/9229d0271e.js" crossorigin="anonymous"></script>
    <script src="~/js/wow.min.js" asp-append-version="true"></script>
    <script src="~/js/global.min.js" asp-append-version="true"></script>
    <script src="~/js/layout.min.js" asp-append-version="true"></script>
    <script src="~/js/blog/global.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>